<!-- profile.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    h2 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-bottom: 20px;
    }

    p {
      margin: 0;
    }
  </style>
</head>

<body>
  <h1>Welcome, <%= user.name %></h1>

  <h2>Link History</h2>

  <% if (urls.length === 0) { %>
  <p>No links found.</p>
  <% } else { %>
  <ul>
    <% urls.forEach((url) => { %>
    <li>
      <p>Long URL: <%= url.longUrl %></p>
      <p>Short URL: <%= url.shortUrl %></p>
      <p>Clicks: <%= url.clicks %></p>
    </li>
    <% }); %>
  </ul>
  <% } %>
</body>

</html>
